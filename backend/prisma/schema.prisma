// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Profile {
  id      Int      @id @default(autoincrement())
  name         String
  university   String
  career       String
  hobbies      String
  qiita_url    String
  github_url   String
  future_goal  String
}

model Project {
  id   Int                 @id @default(autoincrement())
  name String
  summary      String
  technologies String
  result       String

  references   ProjectReference[]
}

model ProjectReference {
  id Int    @id @default(autoincrement())
  project_id   Int
  url          String
  display_name String

  project      Project @relation(fields: [project_id], references: [id])
}

model Company {
  id    Int      @id @default(autoincrement())
  name  String
  url           String
  period        String
  summary       String
  developments  String
  technologies  String
}

model User {
  id       Int      @id @default(autoincrement())
  name          String
  password      String
}